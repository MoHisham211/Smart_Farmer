<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.read.ChooseReadFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/choose_furits"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                app:cardCornerRadius="10dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="4dp">
                    <ImageView
                        android:id="@+id/img_furits"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_fruits"/>
                    <TextView
                        android:id="@+id/txt_furits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Furits"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/choose_vegtabiles"
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="4dp">
                    <ImageView
                        android:id="@+id/img_vegtabiles"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_vegetable"/>
                    <TextView
                        android:id="@+id/txt_vegtabiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vegtabiles1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/choose_plants"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginTop="48dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp">
                <ImageView
                    android:id="@+id/img_plants"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_leaf"/>
                <TextView
                    android:id="@+id/txt_plants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plants"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>