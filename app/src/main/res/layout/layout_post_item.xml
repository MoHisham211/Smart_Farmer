<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="12dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/editPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Title"
        android:fontFamily="@font/ubuntu_bold"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            tools:text="Description of an post lab lab lab bal bal llllallalalla"
            android:fontFamily="@font/ubuntu_medium" />
        <ImageView
            tools:src="@drawable/ic_igallery_google"
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/loveCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="love:2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/ubuntu_regular"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="4dp"
            android:background="#D3D3D3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <Button
                android:padding="2dp"
                android:layout_weight="1"
                android:id="@+id/buttonlove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/heart_love_icon"
                android:drawablePadding="10dp"
                android:text="Love"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@android:color/transparent"/>
            <Button
                android:padding="2dp"
                android:layout_weight="1"
                android:id="@+id/buttoncomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment_icon"
                android:drawablePadding="10dp"
                android:text="Comment"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@android:color/transparent"/>
            <Button
                android:padding="2dp"
                android:layout_weight="1"
                android:id="@+id/buttonShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/share_turn_icon"
                android:drawablePadding="10dp"
                android:text="Share"
                android:fontFamily="@font/ubuntu_regular"
                android:background="@android:color/transparent"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>