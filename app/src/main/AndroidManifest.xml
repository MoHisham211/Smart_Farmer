<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mo.zain.smartfarmer">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_plant_login"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_plant_login"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartFarmer">
        <activity android:name=".authentication.RegistrationActivity"
            android:theme="@style/FullScreen"/>
        <activity android:name=".authentication.LoginActivity"
            android:theme="@style/FullScreen"/>
        <activity android:name=".authentication.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

    </application>

</manifest>